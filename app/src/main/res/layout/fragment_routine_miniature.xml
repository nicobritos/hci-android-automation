<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardMaxElevation="5dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >



            <ImageView
                android:id="@+id/FavRoutine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_white_48dp"
                android:scaleType="centerCrop"
                 />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/FavRoutine"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Rutina"
                android:id="@+id/RoutineName"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/Black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RoutineName"
                android:layout_alignLeft="@id/RoutineName"
                android:id="@+id/RoutineDescription"
                android:text="ADSADSDA"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:id="@+id/PlayRoutine"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_play_arrow_white_48dp"
                android:scaleType="centerCrop"
                />


        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>